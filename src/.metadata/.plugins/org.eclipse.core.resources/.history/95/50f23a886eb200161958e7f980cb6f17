package controller;
import util.Teclado;
public class Exercicio_3 {
	public static void main(String[] args){
		double A = 1.18;
		double D = 1.65;
		double V;
		double Va;
		double Vd;
		V = Teclado.lerDouble("Digite o valor: ");
		Va = (V * A) + V;
		Vd = (V * D) - V;
		System.out.println("O valor com o acrescimo: R$" +Va +"." + " O valor com o desconto: R$" +Vd + ".");
		
	}

}
